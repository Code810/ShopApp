@using ShopApp.MVC.ViewModels
@model LoginVm
<!-- Login start -->
<div class="login-area">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <div class="text-danger mb-10" asp-validation-summary="ModelOnly"></div>
                            <form method="post">
                                <div class="form-group">
                                    <input asp-for="UserNameOrEmail" class="form-control form-control-lg" placeholder="UserNameOrEmail">
                                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input asp-for="RememberMe">
                                        <label asp-for="RememberMe">Remember me</label>
                                        <a asp-action="ForgetPassword">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">Login</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Don't have an account? <a asp-action="register" class="text-primary">Create</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
